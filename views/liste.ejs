<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <title>Liste</title>
</head>
<body class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Citations</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/api/citations">Accueil</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/citations/create">Cr√©er</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <main>
      <h1>Liste des citations</h1>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Citation</th>
                <th scope="col">Autheur</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < citations.length; i++) {%>
                      <tr>
                        <th scope="row"><%= i + 1 %></th>
                        <td><%= citations[i].content %></td>
                        <td><%= citations[i].author %></td>
                        <td>
                            <a class="btn btn-primary" href="/api/citations/update/<%= citations[i]._id %>" role="button">Modifier</a>
                            <a class="btn btn-danger" href="/api/citations/delete/<%= citations[i]._id %>" role="button">Supprimer</a>
                        </td>
                      </tr>
                <% } %>
            </tbody>
          </table>
    </main>
  </body>
</html>