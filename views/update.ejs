<div class="d-flex justify-content-between align-items-center mb-5">
  <h1>Modifier une citation</h1>
  <a type="button" class="btn btn-dark" href="/">
    <i class="fa-solid fa-arrow-left"></i>
    <span id="return_btn">Retour</span>
  </a>
</div>
<form action="/api/citation/update/<%= citation[0]._id %>" method="POST" class="needs-validation" id="form_quote" novalidate>
  <div class="mb-3">
    <div class="form-floating">
      <input type="text" class="form-control" id="content" placeholder="Veuillez saisir la citation" name="content" value="<%= citation[0].content %>" required>
      <label for="content">Citation</label>
    </div>
    <div class="text-dark d-flex justify-content-end" id="content_string"><small>0/500 caractères</small></div>
  </div>
  <div class="mb-3">
    <div class="form-floating">
      <input type="text" class="form-control" id="author" placeholder="Veuillez saisir le nom de l'auteur" name="author" value="<%= citation[0].author %>" required>
      <label for="author">Auteur</label>
    </div>
    <div class="text-dark d-flex justify-content-end" id="author_string"><small>0/100 caractères</small></div>
  </div>
  <div class="d-flex align-items-center mb-2">
    <i class="fa-solid fa-circle-info icone_info text-primary"></i>
    <small>Vous pouvez ajouter des tags existants ou les créer</small>
  </div>
  <div class="d-flex justify-content-between align-items-center">
    <select class="form-select" name="tags[]" id="tags" multiple>
      <% for(var i = 0; i < tags.length; i++) {%>
        <% if (tags_selected.includes(tags[i].label)) { %>
          <option value="<%= tags[i].label %>" selected><%= tags[i].label.toUpperCase() %></option>
        <%} else { %>
          <option value="<%= tags[i].label %>"><%= tags[i].label.toUpperCase() %></option>
        <% } %>
      <% } %>
    </select>
  </div>
  <div class="d-flex justify-content-end mt-5">
    <button type="button" class="btn btn-success" id="submit_form_quote" disabled>
      <i class="fa-solid fa-pencil"></i>
      <span>Modifier</span>
    </button>
  </div>
</form>

